<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stu.otsea.dao.LessonCollectDao">

    <resultMap type="com.stu.otsea.entity.LessonCollect" id="LessonCollectMap">
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="lessonId" column="lesson_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询多个-->
    <select id="queryListByUserId" resultMap="LessonCollectMap">
        select
          user_id, lesson_id, create_time
        from otsea.lesson_collect
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LessonCollectMap">
        select
          user_id, lesson_id, create_time
        from otsea.lesson_collect
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LessonCollectMap">
        select
        user_id, lesson_id, create_time
        from otsea.lesson_collect
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="lessonId != null">
                and lesson_id = #{lessonId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into otsea.lesson_collect(create_time)
        values (#{createTime})
    </insert>

    <insert id="insertBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into otsea.lesson_collect(create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into otsea.lesson_collect(create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime})
        </foreach>
        on duplicate key update
        create_time = values(create_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update otsea.lesson_collect
        <set>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from otsea.lesson_collect where user_id = #{userId} and lesson_id = #{lessonId}
    </delete>

</mapper>