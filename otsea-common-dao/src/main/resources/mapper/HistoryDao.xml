<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stu.otsea.dao.HistoryDao">

    <resultMap type="com.stu.otsea.entity.po.History" id="HistoryMap">
        <result property="targetId" column="target_id" jdbcType="INTEGER"/>
        <result property="targetType" column="target_type" jdbcType="OTHER"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="HistoryMap">
        select
          target_id, target_type, user_id, create_time
        from otsea.history
        where target_id = #{targetId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="HistoryMap">
        select
          target_id, target_type, user_id, create_time
        from otsea.history
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="HistoryMap">
        select
        target_id, target_type, user_id, create_time
        from otsea.history
        <where>
            <if test="targetId != null">
                and target_id = #{targetId}
            </if>
            <if test="targetType != null">
                and target_type = #{targetType}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="targetId" useGeneratedKeys="true">
        insert into otsea.history(user_id, create_time)
        values (#{userId}, #{createTime})
    </insert>

    <insert id="insertBatch" keyProperty="targetId" useGeneratedKeys="true">
        insert into otsea.history(user_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.createTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="targetId" useGeneratedKeys="true">
        insert into otsea.history(user_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.createTime})
        </foreach>
        on duplicate key update
        user_id = values(user_id) , create_time = values(create_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update otsea.history
        <set>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where target_id = #{targetId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from otsea.history where target_id = #{targetId}
    </delete>

</mapper>